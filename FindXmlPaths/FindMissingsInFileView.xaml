<Window x:Class="FindXmlPathsWpf.FindMissingsInFileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Find missing xml paths in one file" Height="300" Width="640"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" Background="AliceBlue">
            <TextBlock>
                Xml paths file: Text file containing list of xml paths (e.g.: C:\Folder\paths.txt)
            </TextBlock>
            <TextBox Name="txtBxXmlPathsFileName"/>
            <TextBlock Margin="0, 20, 0, 0">
                XML file you want to check (e.g.: C:\Folder\file.xml)
            </TextBlock>
            <TextBox Name="txtBxXmlFileName">
            </TextBox>
            <TextBlock Margin="0, 20, 0, 0">
                Output folder (where to put the search results)
            </TextBlock>
            <TextBox Name="txtBxOutputFolder">
            </TextBox>
            <Button Margin="140, 30, 140, 0"
                    Name="btnProcess"
                    Height="40"
                    Click="btnProcess_Click">
                Process
            </Button>
        </StackPanel>
    </Grid>
</Window>
